# Use Ubuntu 18.04 as the base image
FROM ubuntu:18.04

# Install dependencies including Python 3.6
RUN apt-get update && apt-get install -y \
    build-essential \
    python3.6 \
    python3.6-dev \
    python3-pip \
    python3-setuptools \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install cutadapt 1.11
RUN pip3 install cutadapt==1.11

# Add /usr/local/bin to PATH where pip installs executables by default
ENV PATH="/usr/local/bin:${PATH}"

# Verify cutadapt installation and path
RUN which cutadapt && cutadapt --version

# Default entry point
CMD ["/bin/bash"]
