#image de base
FROM python:3.6-slim

#installe cutadapt version 1.1
RUN apt-get update && \
    apt-get install -y gcc build-essential libpython3-dev && \
    apt-get clean

RUN pip install cutadapt==1.11
#installation check
RUN cutadapt --version

ENV PATH="/usr/bin:${PATH}"

#commande par défaut bash
CMD ["/bin/bash"]

